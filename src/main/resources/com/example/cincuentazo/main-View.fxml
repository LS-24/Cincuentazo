<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" spacing="30.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cincuentazo.controller.MainController">
   <children>
      <Label text="CINCUENTAZO">
         <font>
            <Font name="System Bold Italic" size="64.0" />
         </font>
      </Label>
      <MenuButton fx:id="numerodeJugadoresMenuButton" mnemonicParsing="false">
        <items>
          <MenuItem fx:id="item1" mnemonicParsing="false" onAction="#onitem1" text="1 Jugador" />
          <MenuItem fx:id="item2" mnemonicParsing="false" onAction="#onitem2" text="2 Jugadores" />
            <MenuItem fx:id="itrm3" mnemonicParsing="false" onAction="#onitem3" text="3 Jugadores" />
        </items>
         <graphic>
            <TextField fx:id="numeroDeJugadoresTextField" editable="false" />
         </graphic>
      </MenuButton>
      <Label text="Seleccione el numero de jugadores para poder iniciar el juego">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Button fx:id="iniciarJuegoButton" disable="true" mnemonicParsing="false" onMouseClicked="#onIniciarJuegoButtonClicked" text="Iniciar Juego">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
      <Button fx:id="instruccionesButton" mnemonicParsing="false" onMouseClicked="#onInstruccionesButtonClicked" text="Instrucciones de juego!" />
   </children>
</VBox>
